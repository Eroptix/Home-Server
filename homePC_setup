	--name bitwarden \
	-v /home/pi/bitwarden/data/:/data/ \
	-p 4080:80 \
	--restart unless-stopped \
	-d vaultwarden/server:latest
	
#  Command to proxy the vaultwarden server to tailnet
sudo tailscale serve --bg 127.0.0.1:4080

